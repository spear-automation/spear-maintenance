<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maintenancePage1">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_scalable"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-1dp" />

    <EditText
        android:id="@+id/tam_input"
        android:layout_width="306dp"
        android:layout_height="82dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/tam_label"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/req_spinner"
        android:layout_width="303dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toEndOf="@+id/req_label"
        app:layout_constraintTop_toBottomOf="@+id/tam_input" />

    <TextView
        android:id="@+id/tam_label"
        android:layout_width="213dp"
        android:layout_height="77dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="100dp"
        android:text="Enter TAM: "
        android:textColor="@color/colorPrimary"
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/req_label"
        android:layout_width="247dp"
        android:layout_height="74dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="124dp"
        android:text="Choose Request: "
        android:textColor="@color/colorPrimary"
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tam_label" />

    <Button
        android:id="@+id/moveBtn"
        android:layout_width="495dp"
        android:layout_height="179dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Button"
        android:textColor="@color/white"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_spinner"
        app:layout_constraintVertical_bias="0.482" />


</android.support.constraint.ConstraintLayout>
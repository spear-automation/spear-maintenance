<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_scalable"
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-1dp" />

    <EditText
        android:id="@+id/tam_input"
        android:layout_width="215dp"
        android:layout_height="89dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/tam_label"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/req_spinner"
        android:layout_width="214dp"
        android:layout_height="91dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toEndOf="@+id/req_label"
        app:layout_constraintTop_toBottomOf="@+id/tam_input" />

    <TextView
        android:id="@+id/tam_label"
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="100dp"
        android:text="Enter TAM: "
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/req_label"
        android:layout_width="136dp"
        android:layout_height="93dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="56dp"
        android:text="Choose Request: "
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tam_label" />

    <Button
        android:id="@+id/moveBtn"
        android:layout_width="358dp"
        android:layout_height="116dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_spinner" />


</android.support.constraint.ConstraintLayout>